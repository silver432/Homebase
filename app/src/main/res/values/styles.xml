<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Splash theme. -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <!-- No Title Bar(Login) -->
    <style name="AppTheme.NoActionBar">
        <item name="colorAccent">#2c2c2c</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/colorSky</item>
    </style>

    <!-- Sign Up Theme -->
    <style name="AppTheme.SignUpTheme">
        <item name="colorAccent">#00b4df</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">#2c2c2c</item>
        <item name="colorControlNormal">#ffffff</item>
    </style>

    <style name="Inactive" parent="AppTheme">
        <item name="android:textColorPrimary">@android:color/darker_gray</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

</resources>
