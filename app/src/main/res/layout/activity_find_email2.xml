<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/theme_background"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/find_email2_iv_logo"
        android:layout_width="138dp"
        android:layout_height="108dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="29dp"
        android:layout_marginTop="72dp"
        android:contentDescription="@string/logo"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/find_email2_tv_show_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/registered_email"
        android:textSize="14sp" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/find_email2_show_email2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="76dp"
            android:textColor="#2c2c2c"
            android:textSize="20sp" />

    </ScrollView>

    <ImageView
        android:layout_width="28dp"
        android:layout_height="14dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="26dp"
        android:src="@drawable/find_email2_arrow" />

    <Button
        android:id="@+id/find_email2_btn_goto_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/radius_button_login"
        android:text="@string/goto_login"
        android:textColor="#ffffff"
        android:textSize="14sp" />


    <Button
        android:id="@+id/find_email2_btn_find_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/radius_button_login"
        android:text="@string/find_password"
        android:textColor="#ffffff"
        android:textSize="14sp" />

</android.support.v7.widget.LinearLayoutCompat>