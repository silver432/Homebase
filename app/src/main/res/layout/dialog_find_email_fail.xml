<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/dialog_find_email_iv_err"
        android:layout_width="59dp"
        android:layout_height="59dp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/icon_error" />

    <TextView
        android:id="@+id/dialog_find_email_tv_err"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_find_email_iv_err"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:text="@string/find_emaill_fail"
        android:textSize="15sp" />

    <Button
        android:id="@+id/dialog_find_email_btn_check"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_below="@id/dialog_find_email_tv_err"
        android:layout_marginBottom="11dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/radius_button_login"
        android:text="@string/check"
        android:textColor="@color/colorWhite"
        android:textSize="13sp" />

    <Button
        android:id="@+id/dialog_find_email_btn_goto_signup"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_below="@id/dialog_find_email_btn_check"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/radius_button_login"
        android:text="@string/goto_signup"
        android:textColor="@color/colorWhite"
        android:textSize="13sp" />

</RelativeLayout>