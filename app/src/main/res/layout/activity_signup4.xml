<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2c2c2c">

    <Button
        android:id="@+id/signup4_btn_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/back" />

    <TextView
        android:id="@+id/signup4_tv_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:text="@string/signup3_information_input"
        android:textColor="#ffffff"
        android:textSize="19sp" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/signup4_btn_finish"
        android:layout_below="@id/signup4_tv_register"
        android:layout_marginTop="40dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/signup4_til_position"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:textColorHint="#ffffff">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/signup4_et_position"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/position"
                    android:inputType="text"
                    android:textColor="@color/colorSky"
                    android:textSize="@dimen/hint_size" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/signup4_til_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/signup4_til_position"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="40dp"
                android:textColorHint="#ffffff">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/signup4_et_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/player_no"
                    android:inputType="text"
                    android:textColor="@color/colorSky"
                    android:textSize="@dimen/hint_size"/>
            </android.support.design.widget.TextInputLayout>

            <RelativeLayout
                android:id="@+id/signup4_rl_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/signup4_til_no">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="33dp"
                    android:layout_marginTop="52dp"
                    android:text="@string/pitcher"
                    android:textColor="@color/colorWhite"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/signup4_tv_pitcher_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="51dp"
                    android:layout_toStartOf="@id/signup4_cb_pitcher_left"
                    android:text="@string/left"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp" />

                <CheckBox
                    android:id="@+id/signup4_cb_pitcher_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="44dp"
                    android:layout_toStartOf="@id/signup4_tv_pitcher_right" />

                <TextView
                    android:id="@+id/signup4_tv_pitcher_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="51dp"
                    android:layout_toStartOf="@id/signup4_cb_pitcher_right"
                    android:text="@string/right"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp" />

                <CheckBox
                    android:id="@+id/signup4_cb_pitcher_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="24dp"
                    android:layout_marginTop="44dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/signup4_rl_1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="33dp"
                    android:layout_marginTop="45dp"
                    android:text="@string/hitter"
                    android:textColor="@color/colorWhite"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/signup4_tv_hitter_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="51dp"
                    android:layout_toStartOf="@id/signup4_cb_hitter_left"
                    android:text="@string/left"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp" />

                <CheckBox
                    android:id="@+id/signup4_cb_hitter_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="44dp"
                    android:layout_toStartOf="@id/signup4_tv_hitter_right" />

                <TextView
                    android:id="@+id/signup4_tv_hitter_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="51dp"
                    android:layout_toStartOf="@id/signup4_cb_hitter_right"
                    android:text="@string/right"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp" />

                <CheckBox
                    android:id="@+id/signup4_cb_hitter_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="24dp"
                    android:layout_marginTop="44dp" />

            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/signup4_btn_finish"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#4b4b4b"
        android:text="@string/signup_confirm"
        android:textColor="#fffffd"
        android:textSize="17sp" />

</RelativeLayout>