<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/choose_team_iv_team_logo"
        android:src="@drawable/logo"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="9dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="85dp"
        android:layout_height="85dp" />
    <TextView
        android:id="@+id/choose_team_tv_team"
        android:textSize="15sp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="15sp"
        android:text="@string/enter_team_question"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="22dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/choose_team_btn_finish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/radius_button_login"
        android:text="@string/check"
        android:textColor="#ffffff"
        android:textSize="15sp" />
    <Button
        android:id="@+id/choose_team_btn_cancel"
        android:background="@drawable/radius_button_login"
        android:text="@string/cancel"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="3dp"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</android.support.v7.widget.LinearLayoutCompat>